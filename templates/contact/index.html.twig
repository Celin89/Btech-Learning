{% extends 'base.html.twig' %}


{%  block carousel %}
    <section class="sub-banner bg-parallax" style="background:url({{ asset('assets/images/main-slider/btech_img_1.jpg') }}) no-repeat; background-size:cover;">
        <div class="container">
            <div class="position-center-center">
                <h1>contact us</h1>
            </div>
        </div>
    </section>
    {%  endblock  %}

{% block content %}

        <!-- MAP  -->
    <div data-aos="fade-up">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d164.05602432142808!2d2.3459781049724557!3d48.860186108535224!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e1f413ba07f%3A0xea1764e21defb91a!2sRue%20des%20Halles%2C%2075001%20Paris%2C%20France!5e0!3m2!1sen!2scg!4v1679514469449!5m2!1sen!2scg"
                width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <!-- Conatct Pages  -->
        <div class="white-bg welcome">
            <div class="container">
                <div class="col-md-12">
                    <ul class="row margin-top-70 margin-bottom-70">

                        <!-- Services -->
                        <li class="col-md-4">
                            <div class="media">
                                <div class="media-left">
                                    <div class="icon"> <i class="ion-map"></i> </div>
                                </div>
                                <div class="media-body">
                                    <h5>BTECH-EXPERT</h5>
                                    <p>15 RUE DES HALLES,
                                        75001 PARIS </p>
                                </div>
                            </div>
                        </li>

                        <!-- Services -->
                        <li class="col-md-4">
                            <div class="media">
                                <div class="media-left">
                                    <div class="icon"> <i class="icon-screen-smartphone"></i> </div>
                                </div>
                                <div class="media-body">
                                    <h5>Téléphone</h5>
                                    <p>+33 6 05 83 74 71</p>
                                </div>
                            </div>
                        </li>

                        <!-- Services -->
                        <li class="col-md-4">
                            <div class="media">
                                <div class="media-left">
                                    <div class="icon"> <i class="fa fa-envelope-o"></i> </div>
                                </div>
                                <div class="media-body">
                                    <h5>email address</h5>
                                    <p>info@btech-expert.com </p>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Contact  -->
        <div class="contact style-3 light-gray-bg padding-top-40 padding-bottom-80">
            <div class="container">
                <div class="heading-block text-center margin-bottom-80">
                    <h3>Nous contacter</h3>
                    <hr>
                    <span class=" margin-top-20">
                       BTECH-EXPERT Vous accompagne dans la conception et développement des solutions informatiques et
                        télématiques , le support et l’assistance auprès
                        des entreprises pour les solutions informatiques et télématiques délivrées.
                    </span>
                </div>

                <!-- Form  -->
                <div class="contact-right padding-top-30 padding-left-30">
                    <!-- Success Msg -->
                    <div id="contact_message" class="success-msg"> <i class="fa fa-paper-plane-o"></i>Merci pour votre message</div>

                    <!-- FORM -->
                    <form role="form" id="contact_form" class="contact-form" method="post" >
                        <ul class="row">
                            <li class="col-sm-4">
                                <label>
                                    <input type="text" class="form-control" name="name" id="name" placeholder="Name *">
                                </label>
                            </li>
                            <li class="col-sm-4">
                                <label>
                                    <input type="text" class="form-control" name="email" id="email" placeholder="Email address *">
                                </label>
                            </li>
                            <li class="col-sm-4">
                                <label>
                                    <input type="text" class="form-control" name="objet" id="objet" placeholder="Votre objet">
                                </label>
                            </li>
                            <li class="col-sm-12">
                                <label>
                                    <textarea class="form-control" name="message" id="message" rows="5" placeholder="Your Message"></textarea>
                                </label>
                            </li>
                            <li class="col-sm-12">
                                <button type="submit" class="btn" value="submit" id="btn_submit">send message</button>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- News Letter -->
    <div class="container">
        <section class="news-letter">
            <div class="row">
                <div class="col-md-6">
                    <h5>Subscribe to our newsletter</h5>
                    <p>You can unsubscribe anytime you want</p>
                </div>
                <div class="col-md-6">
                    <form>
                        <input type="email" class="z-depth-1" placeholder="Email address" required>
                        <button type="submit" class="btn waves-effect waves-light">subscribe</button>
                    </form>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

