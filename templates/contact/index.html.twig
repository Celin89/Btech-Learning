{% extends 'base.html.twig' %}

{% block title %} contacter-nous {% endblock %}

{% block content %}
    <!--Page Title-->
    <section class="page-title" style="background-image:url({{ asset('assets/images/background/btech_img_3.jpg') }});">
        <div class="auto-container">
            <h1>Contact</h1>
        </div>
    </section>
    <!--End Page Title-->

    <!--Page Info-->
    <section class="page-info">
        <div class="auto-container clearfix">
            <div class="pull-left">
                <ul class="bread-crumb clearfix">
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li>Contact</li>
                </ul>
            </div>
        </div>
    </section>
    <!--Page Info-->
    <!--Contact Info Section-->
    <section class="contact-info-section">
        <div class="auto-container">
            <div class="row clearfix">
                <!--Contact Detail-->
                <div class="contact-detail col-md-4 col-sm-6 col-xs-12">
                    <div class="inner-box">
                        <h3>Adresse</h3>
                        <div class="text">60 Grant Ave. Central New Road 0708, UK</div>
                    </div>
                </div>

                <!--Contact Detail-->
                <div class="contact-detail col-md-4 col-sm-6 col-xs-12">
                    <div class="inner-box">
                        <h3>Phone & Email</h3>
                        <div class="text">+33 06 05 83 74 71 & info@btech-expert.com</div>
                    </div>
                </div>

                <!--Contact Detail-->
                <div class="contact-detail col-md-4 col-sm-6 col-xs-12">
                    <div class="inner-box">
                        <h3>Rester connecter</h3>
                        <div class="text">Retrouver nous sur</div>
                        <ul class="social-icon-four">
                            <li><a href="#" class="fa fa-facebook"></a></li>
                            <li><a href="#" class="fa fa-twitter"></a></li>
                            <li><a href="#" class="fa fa-google-plus"></a></li>
                            <li><a href="#" class="fa fa-linkedin"></a></li>
                            <li><a href="#" class="fa fa-pinterest"></a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!--End Contact Info Section-->

    <section class="contact-form-section">
        <div class="auto-container">
            <div class="row clearfix">
                <div class="content-column col-md-5 col-sm-12 col-xs-12">
                    <h2>Avez <br> vous une question <br> à propose de nous ?</h2>
                    <div class="text">
                        <p>Tout type de solution commerciale et de consultation, n'hésitez pas à nous contacter pour un support client immédiat. Nous sommes ravis d'avoir de vos nouvelles</p>
                        <p><strong>Office Hours:</strong> Nous sommes toujours ouverts sauf le samedi et le dimanche de <span>10:00</span> to <span>20:00</span></p>
                    </div>
                </div>
                <!--Contact Form Column-->
                <div class="contact-form-column col-md-7 col-sm-12 col-xs-12">
                    <h2>Contactez-nous</h2>
                    <div class="default-form contact-form">
                        <form method="post" action="">
                            <div class="row clearfix">

                                <div class="col-md-6 col-sm-6 col-xs-12">

                                    <div class="form-group">
                                        <div class="group-inner">
                                            <input type="text" name="nom" value="" placeholder="Votre Nom *" required>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="group-inner">
                                            <input type="text" name="objet" value="" placeholder="Votre objet *" required>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="group-inner">
                                            <input type="email" name="email" value="" placeholder="Email *" required>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <div class="group-inner">
                                            <textarea name="message" placeholder="Votre message" required></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-md-12 col-xs-12">
                                    <button type="submit" class="theme-btn btn-style-one">Envoyez</button>
                                </div>

                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <!--Map Section-->
    <section class="map-section">
        <div data-aos="fade-up">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d164.05602432142808!2d2.3459781049724557!3d48.860186108535224!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e1f413ba07f%3A0xea1764e21defb91a!2sRue%20des%20Halles%2C%2075001%20Paris%2C%20France!5e0!3m2!1sen!2scg!4v1679514469449!5m2!1sen!2scg"
                    width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </section>
    <!--End Map Section-->

    <script src="{{ asset('assets/js/mixitup.js') }}"></script>
    <script src="{{ asset('assets/js/validate.js') }}"></script>
{% endblock %}
